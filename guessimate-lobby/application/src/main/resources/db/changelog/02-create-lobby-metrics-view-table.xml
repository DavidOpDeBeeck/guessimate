<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">
    <changeSet id="create-lobby-metrics-view-table" author="davidodb">
        <createTable tableName="lobby_metrics_view">
            <column name="session_id" type="varchar">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="timestamp"/>
            <column name="connected_user_count" type="int" defaultValueNumeric="0"/>
            <column name="status" type="varchar"/>
            <column name="last_activity" type="timestamp"/>
            <column name="estimations_completed" type="int" defaultValueNumeric="0"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
